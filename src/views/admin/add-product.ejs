<%- include('../includes/head.ejs') %>
	<link rel="stylesheet" href="/css/form.css">
</head>
<body>
	<%- include('../includes/navigation.ejs') %>

	<main>
		<form class="main-form" action="/admin/add-product" method="POST">
			<h1 class="main-form-title">Add a product</h1>

			<div class="main-form-control">
				<label class="main-form__label" for="title">Title</label>
				<input class="main-form__input" type="text" name="title">
			</div>
			<div class="main-form-control">
				<label class="main-form__label" for="imageUrl">Image URL</label>
				<input class="main-form__input" type="text" name="imageUrl">
			</div>
			<div class="main-form-control">
				<label class="main-form__label" for="description">Description</label>
				<textarea class="main-form__input" type="text" name="description" rows="5"></textarea>
			</div>
			<div class="main-form-control">
				<label class="main-form__label" for="price">Price</label>
				<input class="main-form__input" type="number" name="price" step="0.01">
			</div>

			<button class="main-form__button" type="submit">Add Product</button>
		</form>
	</main>
<%- include('../includes/footer.ejs') %>
