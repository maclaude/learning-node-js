<section class="centered pagination">
	<% if (currentPage !== 1 && previousPage !==1) { %>
		<a class="pagination-page" href="?page=1">1</a>
	<% } %>
	<% if (hasPreviousPage) { %>
		<a class="pagination-page" href="?page=<%= previousPage %>"><%= previousPage %></a>
	<% } %>
	<a class="pagination-page pagination-page--active" href="/?page=<%= currentPage %>"><%= currentPage %></a>
	<% if (hasNextPage) { %>
		<a class="pagination-page" href="?page=<%= nextPage %>"><%= nextPage %></a>
	<% } %>
	<% if (lastPage !== currentPage && nextPage !== lastPage) { %>
		<a class="pagination-page" href="?page=<%= lastPage %>"><%= lastPage %></a>
	<% } %>
</section>
