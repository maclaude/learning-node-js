<%- include('../includes/head.ejs') %>
	<link rel="stylesheet" href="/css/form.css">
	<link rel="stylesheet" href="/css/auth.css">
</head>
<body>
	<%- include('../includes/navigation.ejs') %>

	<main>
		<form class="signup-form" action="/signup" method="POST">
			<h1 class="main-form-title">Signup</h1>

			<div class="main-form-control">
				<label class="main-form__label" for="name">Name</label>
				<input class="main-form__input" type="text" name="name">
			</div>
			<div class="main-form-control">
				<label class="main-form__label" for="title">Email</label>
				<input class="main-form__input" type="text" name="email">
			</div>
			<div class="main-form-control">
				<label class="main-form__label" for="password">Password</label>
				<input class="main-form__input" type="password" name="password">
			</div>
			<div class="main-form-control">
				<label class="main-form__label" for="confirmPassword">Confirm Password</label>
				<input class="main-form__input" type="password" name="confirmPassword">
			</div>
			<input type="hidden" name="_csrf" value="<%= csrfToken %>">
			<button class="main-form__button" type="submit">Signup</button>
		</form>
	</main>
<%- include('../includes/footer.ejs') %>
