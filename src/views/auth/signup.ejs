<%- include('../includes/head.ejs') %>
	<link rel="stylesheet" href="/css/form.css">
	<link rel="stylesheet" href="/css/auth.css">
</head>
<body>
	<%- include('../includes/navigation.ejs') %>

	<main>
		<form class="signup-form" action="/signup" method="POST" novalidate>
			<h1 class="main-form-title">Signup</h1>

			<div class="main-form-control">
				<label class="main-form__label" for="name">Name</label>
				<input class="main-form__input" type="text" name="name" value="<%= oldInputs.name %>">
			</div>
			<div class="main-form-control">
				<label class="main-form__label" for="title">Email</label>
				<input 
					class="main-form__input <%= validationErrors.find(e => e.param === 'email') ? 'invalid' : '' %>" 
					type="text"
					name="email"
					value="<%= oldInputs.email %>">
			</div>
			<div class="main-form-control">
				<label class="main-form__label" for="password">Password</label>
				<input
					class="main-form__input <%= validationErrors.find(e => e.param === 'password') ? 'invalid' : '' %>" 
					type="password"
					name="password" 
					value="<%= oldInputs.password %>">
			</div>
			<div class="main-form-control">
				<label class="main-form__label" for="confirmPassword">Confirm Password</label>
				<input 
					class="main-form__input <%= validationErrors.find(e => e.param === 'confirmPassword') ? 'invalid' : '' %>" 
					type="password"
					name="confirmPassword"
					value="<%= oldInputs.confirmPassword %>">
			</div>
			<input type="hidden" name="_csrf" value="<%= csrfToken %>">
			<button class="main-form__button" type="submit">Signup</button>
		</form>
		<% if (errorMessage) { %>
			<div class="user-message user-message--error"><%= errorMessage %></div>
		<% } %>
	</main>
<%- include('../includes/footer.ejs') %>
