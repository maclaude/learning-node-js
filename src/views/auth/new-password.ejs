<%- include('../includes/head.ejs') %>
	<link rel="stylesheet" href="/css/form.css">
	<link rel="stylesheet" href="/css/auth.css">
</head>
<body>
	<%- include('../includes/navigation.ejs') %>

	<main>
		<form class="reset-form" action="/new-password" method="POST">
			<h1 class="main-form-title">Update Password</h1>

			<div class="main-form-control">
				<label class="main-form__label" for="newPassword">New Password</label>
				<input class="main-form__input" type="password" name="newPassword">
			</div>
			<input type="hidden" name="userId" value="<%= userId %>">
			<input type="hidden" name="_csrf" value="<%= csrfToken %>">
			
			<button class="main-form__button" type="submit">Update</button>
		</form>
		<% if (errorMessage) { %>
			<div class="user-message user-message--error"><%= errorMessage %></div>
		<% } %>
	</main>
<%- include('../includes/footer.ejs') %>
