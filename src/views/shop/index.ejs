<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
	<%- include('../includes/navigation.ejs') %>

    <main>
		<% if (items.length > 0) { %>
			<div class="grid">
				<% for (let item of items) { %>
					<article class="card product-item">
						<header class="card__header">
							<h1 class="product__title"><%= item.title %></h1>
						</header>
						<div class="card__image">
							<img src="/<%= item.imageUrl %>" alt="<%= item.title %>">
						</div>
						<div class="card__content">
							<h2 class="product__price">$<%= item.price %></h2>
							<p class="product__description"><%= item.description %></p>
						</div>
						<div class="card__actions">
							<a href="/products/<%= item._id %>" class="btn">Details</a>
							<% if (isAuthenticated) { %>
								<%- include('../includes/add-to-cart.ejs', { item: item }) %>
							<% } %>
						</div>
					</article>
				<% } %>
			</div>
			<section class="centered pagination">
				<% if (currentPage !== 1 && previousPage !==1) { %>
					<a class="pagination-page" href="/?page=1">1</a>
				<% } %>
				<% if (hasPreviousPage) { %>
					<a class="pagination-page" href="/?page=<%= previousPage %>"><%= previousPage %></a>
				<% } %>
				<a class="pagination-page pagination-page--active" href="/?page=<%= currentPage %>"><%= currentPage %></a>
				<% if (hasNextPage) { %>
					<a class="pagination-page" href="/?page=<%= nextPage %>"><%= nextPage %></a>
				<% } %>
				<% if (lastPage !== currentPage && nextPage !== lastPage) { %>
					<a class="pagination-page" href="/?page=<%= lastPage %>"><%= lastPage %></a>
				<% } %>
			</section>
		<% } else  { %>
			<h1 class="main-title">No Products Found</h1>
		<% } %>
	</main>
<%- include('../includes/footer.ejs') %>
