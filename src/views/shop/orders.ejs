<%- include('../includes/head.ejs') %>
</head>

<body>
	<%- include('../includes/navigation.ejs') %>

	<main>
		<% if (orders.length <= 0) { %>
			<h1 class="main-title">Nothing for the moment</h1>
		<% } else { %>
			<div class="centered">
				<h1 class="main-title">Your Orders</h1>
				<ul>
					<% orders.forEach(order => { %>
					<li class="order-card">
						<h1 class="order-card-title">Order #<%= order._id %> - <a href="/orders/<%= order._id %>">Invoice</a></h1>
						<ul>
							<% order.products.forEach(product => { %> 
								<li><%= product.product.title %> (Quantity: <%= product.quantity %>)</li>
							<% }); %>
						</ul>
					</li>
					<% }); %>
				</ul>
			</div>
		<% } %>
	</main>
<%- include('../includes/footer.ejs') %>
