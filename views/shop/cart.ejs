<%- include('../includes/head.ejs') %>
</head>

<body>
	<%- include('../includes/navigation.ejs') %>
	<main>
		<h1 class="main-title">Your Cart</h1>
			<% if (products.length > 0) { %>
				<ul class="cart-list">
					<% products.forEach(product => { %>
						<li class="cart-list__item">
							<p class="cart-list__item--title">
								<%= product.productId.title %> (<%= product.quantity %>)
							</p>
							<form action="/cart-delete-item" method="POST">
								<input type="hidden" value="<%= product.productId._id %>" name="productId">
								<input type="hidden" name="_csrf" value="<%= csrfToken %>">
								<button class="btn" type="submit">Delete</button>
							</form>
						</li>
					<% }) %>
				</ul>
				<div class="centered">
					<a class="btn" href="/checkout">Order Now</a>
				</div>
			<% } else { %>
				<h1 class="centered">No Products in the Cart</h1>
			<% } %>
	</main>

<%- include('../includes/footer.ejs') %>
